{
    "build": {
        "sdist": [
            "pip install -r requirements.txt",
            "python setup.py sdist"
        ],
        "install": [
            "pip install -v source.tar.gz"
        ],
        "wheel": [
            "python untar.py source.tar.gz src",
            "python src/setup.py bdist_wheel --universal -d dist",
            "python cpdist.py dist"
        ]
    },
    "test": {
        "dependencies": ["boto"],
        "after": ["install", "wheel"],
        "package": "sputnik",
        "args": "--tb=native"
    }
}
